@model PROG6212part2.Models.Claim
@{
    Layout = "_Layout";
}

<h1>Claim Details</h1>
<p><strong>Lecturer:</strong> @Model.LecturerName</p>
<p><strong>Hours:</strong> @Model.HoursWorked</p>
<p><strong>Hourly rate:</strong> @Model.HourlyRate</p>
<p><strong>Amount:</strong> @Model.Amount</p>
<p><strong>Status:</strong> @Model.Status</p>
<p><strong>Notes:</strong> @Model.Notes</p>
@if (!string.IsNullOrEmpty(Model.UploadedFileName))
{
    <p>Uploaded file: <a href="/uploads/@Model.UploadedFileName" target="_blank">View</a></p>
}
<p><a href="/Claims/Index">Back to list</a></p>
