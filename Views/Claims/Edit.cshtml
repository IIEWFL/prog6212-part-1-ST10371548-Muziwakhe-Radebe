@model PROG6212part2.Models.Claim
@{
    Layout = "_Layout";
}

<h1>Edit Claim</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data" class="card p-4 shadow-sm">
    <input asp-for="Id" type="hidden" />

    <div class="mb-3">
        <label class="form-label">Lecturer name</label>
        <input asp-for="LecturerName" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Hours worked</label>
        <input asp-for="HoursWorked" type="number" step="0.5" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Hourly rate</label>
        <input asp-for="HourlyRate" type="number" step="0.01" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Notes</label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Status</label>
        <select asp-for="Status" class="form-select"
                asp-items="@(new SelectList(Enum.GetValues(typeof(PROG6212part2.Models.ClaimStatus))))">
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Upload new file</label>
        <input type="file" name="upload" class="form-control" accept=".pdf,.docx,.xlsx" />
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
    <a href="/Claims/Index" class="btn btn-secondary">Cancel</a>
</form>
